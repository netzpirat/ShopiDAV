!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title ShopiDAV - Develop your Shopify store with pleasure!

    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'

    %link{href: 'images/favicon.ico', rel: 'shortcut icon'}
    %link{href: 'images/shopify-57.png', rel: 'apple-touch-icon'}
    %link{href: 'images/shopify-72.png', rel: 'apple-touch-icon', sizes: '72x72'}
    %link{href: 'images/shopify-114.png', rel: 'apple-touch-icon', sizes: '114x114'}

    /[if lt IE 9]
      = javascript_include_tag '//html5shim.googlecode.com/svn/trunk/html5.js'

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container

          %a.btn.btn-navbar{ data: { target: '.nav-collapse', toggle: 'collapse' } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          = link_to 'ShopiDAV', '/', :class => 'brand'

          - if current_shop
            .nav-collapse
              %ul.nav.pull-right
                %li
                  %a{ href: "http://#{ current_shop.url }", target: 'blank' }
                    %i.icon-home.icon-white
                    Storefront
                %li
                  %a{ href: "https://#{ current_shop.url }/admin", target: 'blank' }
                    %i.icon-cog.icon-white
                    Shopify Admin
                %li.divider
                %li
                  %a{ href: logout_path }
                    %i.icon-off.icon-white
                    Logout

    .container
      .content
        .row
          .span9
            = yield

          .span3
            .well.sidebar-nav
              %ul.nav.nav-list
                %li.nav-header ShopiDAV information
                %li= link_to 'How does ShopiDAV work?', '/how-does-shopidav-work'
                %li= link_to 'Changelog', '/shopidav-changelog'
                %li.nav-header WebDAV information
                %li= link_to 'What is WebDAV?', '/what-is-webdav'
                %li= link_to 'WebDAV clients', '/webdav-clients'
                %li.nav-header Development
                %li= link_to 'Using Guard and Livereload', '/guard-and-livereload'
                %li.nav-header Support
                %li= link_to 'Community', '/community'
                %li= link_to 'Contact', '/contact'

      %footer
        %p
          A Shopify app by
          %a{ href: 'https://mksoft.ch' } MKSoft

    = javascript_include_tag 'application'
